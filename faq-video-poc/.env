# Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/multi-qa-MiniLM-L6-cos-v1
EMBEDDING_DIMENSION=384

# Data Configuration
FAQ_DATA_PATH=data/faq.csv
CHROMA_PERSIST_DIR=chroma_db

# Application Settings
LOG_LEVEL=INFO
MAX_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# WebRTC Configuration
WEBRTC_ICE_SERVERS=stun:stun.l.google.com:19302
VIDEO_WIDTH=640
VIDEO_HEIGHT=480
VIDEO_FPS=30

WHISPER_MODEL=turbo          # Model: tiny, base, small, medium, large, turbo
WHISPER_LANGUAGE=en          # Language code
AUDIO_SAMPLE_RATE=16000      # Sample rate
SILENCE_THRESHOLD=1.0        # Stop recording after X seconds of silence
MAX_RECORDING_TIME=30        # Maximum recording duration
ENERGY_THRESHOLD=300         # Voice activity detection sensitivity
AUDIO_DEVICE_INDEX=1         # Specific audio device (optional)

# For quiet environments (more sensitive)
VAD_MIN_SPEECH_FRAMES=2
VAD_MIN_SILENCE_FRAMES=5

# For noisy environments (less sensitive)
VAD_MIN_SPEECH_FRAMES=5
VAD_MIN_SILENCE_FRAMES=12
VAD_NOISE_FLOOR=0.002

# For quick questions
VAD_MIN_RECORDING_DURATION=0.5
VAD_PRE_ROLL_DURATION=0.3